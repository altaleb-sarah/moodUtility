public final class MoodUti {

    private MoodUti() {
    }

    public static String analyzeMood(String input) {
        if (input == null || input.trim().isEmpty()) {
            return "NEUTRAL";
        }

        String sentenceInput = input.toLowerCase().trim();

        String result;

        if (sentenceInput.contains("happy") || sentenceInput.contains("great") 
          ||sentenceInput.contains("good")  ||sentenceInput.contains("amazing") 
         || sentenceInput.contains("blessed")) {
            result = "POSITIVE"; 
        } else if (sentenceInput.contains("sad") || sentenceInput.contains("angry") ||
          sentenceInput.contains("depressed")  ||sentenceInput.contains("stressed") 
         || sentenceInput.contains("crying")) {
            result = "NEGATIVE";
        } else {
            result = "NEUTRAL";
        }

        return result;
    }
}
